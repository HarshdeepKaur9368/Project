<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2"></div>
    
    <div class="card col-4 offset-3 show-card listing-card">
        <h3><%=listing.title%></h3>
        <img src="<%=listing.images%>" class="card-img-top show-img" alt="listing_images">
         <div class="card-body">
            <p class="card-text">
            <%=listing.description%><br>
            &#x20B9;<%=listing.price%><br>
            <%=listing.location%><br>
            <%=listing.country%><br>
        </p>
  </div>
    </div>
    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3">Edit </a>
    <br><br>
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE ">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <hr>
<div class="col-8 offset-3">
<h4>Leave a review</h4>
<form method="post" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
        <label for="rating">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
    </div>
    <fieldset class="starability-basic">
        <legend>First rating:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    <div>
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="6" class="form-control" placeholder="Write your review" required></textarea>
    </div>
    <br>
    <button class="btn btn-outline-dark">Submit</button>

    <hr>

    <h4>All Reviews</h4>
    <div>
        <div class="row">
        <%for( review of listing.reviews ){%>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Harry Watson</h5>
                    <p class="card-text"><%=review.comment%></p>
                    <p class="card-text"><%=review.rating%>stars</p>
                    <p class="starability-result" data-rating="3">
                      Rated: 3 stars
                    </p>
                </div>
                <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
               
            </div>
     <% }%>
    </div>
    </div>

</form>
</div>
</div>
